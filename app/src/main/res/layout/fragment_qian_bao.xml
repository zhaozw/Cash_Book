<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:id="@+id/qb_ry_yuer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/btg_icon_arrow_selected"
                    android:padding="10dp"
                    android:text="@string/qianbao_yuer"
                    android:textSize="@dimen/txt_16"/>

                <TextView
                    android:id="@+id/yuer_jia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/calendar_jia"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/txt_16"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/xianjian"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:id="@+id/qb_ry_cash"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/qb_image_cash"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/xianjin"/>

                <TextView
                    android:id="@+id/qb_txt_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/qb_image_cash"
                    android:text="@string/qianbao_cash"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_15"/>

                <TextView

                    android:id="@+id/qb_txt_cash_yuer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qb_txt_cash"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/qb_image_cash"
                    android:text="@string/qianbao_cash_yuer"
                    android:textColor="@color/text_color_bg"
                    android:textSize="@dimen/txr_13"/>

                <TextView
                    android:id="@+id/cash_jia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/calendar_jia"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/chuxuka"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:id="@+id/qb_ry_chuxuka"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/qb_image_chuxuka"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_add_1"/>

                <TextView
                    android:id="@+id/qb_txt_chuxuka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/qb_image_chuxuka"
                    android:text="@string/qianbao_chuxuka"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_15"/>

                <TextView
                    android:id="@+id/qb_txt_chuxuka_yuer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qb_txt_chuxuka"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/qb_image_chuxuka"
                    android:text="@string/qianbao_chuxuka_yuer"
                    android:textColor="@color/text_color_bg"
                    android:textSize="@dimen/txr_13"/>

                <TextView
                    android:id="@+id/chuxuka_jia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/calendar_jia"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/xinyongka"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:id="@+id/qb_ry_xinyka"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/qb_image_xinyka"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/huankuan"/>

                <TextView
                    android:id="@+id/qb_txt_xinyka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/qb_image_xinyka"
                    android:text="@string/qianbao_xinyka"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_15"/>

                <TextView
                    android:id="@+id/qb_txt_xinyka_yuer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qb_txt_xinyka"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/qb_image_xinyka"
                    android:text="@string/qianbao_xinyka_yuer"
                    android:textColor="@color/text_color_bg"
                    android:textSize="@dimen/txr_13"/>

                <TextView
                    android:id="@+id/xinyka_jia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/calendar_jia"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/zhifubao"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:id="@+id/qb_ry_zhifubao"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/qb_image_zhifubao"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/zhifubao"/>

                <TextView
                    android:id="@+id/qb_txt_zhifubao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/qb_image_zhifubao"
                    android:text="@string/qianbao_zhifb"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_15"/>

                <TextView
                    android:id="@+id/qb_txt_zhifubao_yuer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qb_txt_zhifubao"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/qb_image_zhifubao"
                    android:text="@string/qianbao_zhifb_yuer"
                    android:textColor="@color/text_color_bg"
                    android:textSize="@dimen/txr_13"/>

                <TextView
                    android:id="@+id/zhifb_jia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/calendar_jia"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/jiechu"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:id="@+id/qb_ry_jiechu"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/qb_image_jiechu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/zhuanzhang"/>

                <TextView
                    android:id="@+id/qb_txt_jiechu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/qb_image_jiechu"
                    android:text="@string/qianbao_jiechu"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_15"/>

                <TextView
                    android:id="@+id/qb_txt_jiechu_yuer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qb_txt_jiechu"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/qb_image_jiechu"
                    android:text="@string/qianbao_jiechu_yuer"
                    android:textColor="@color/text_color_bg"
                    android:textSize="@dimen/txr_13"/>

                <TextView
                    android:id="@+id/jiechu_jia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/calendar_jia"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/jieru"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:id="@+id/qb_ry_jieru"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/qb_image_jieru"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/tuikuan"/>

                <TextView
                    android:id="@+id/qb_txt_jieru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/qb_image_jieru"
                    android:text="@string/qianbao_jieru"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_15"/>

                <TextView
                    android:id="@+id/qb_txt_jieru_yuer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qb_txt_jieru"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/qb_image_jieru"
                    android:text="@string/qianbao_jieru_yuer"
                    android:textColor="@color/text_color_bg"
                    android:textSize="@dimen/txr_13"/>

                <TextView
                    android:id="@+id/jieru_jia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/calendar_jia"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
