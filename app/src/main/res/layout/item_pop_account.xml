<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_choose_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp">

        <ImageView
            android:id="@+id/choose_cash_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/zongxiaofei"/>

        <TextView
            android:id="@+id/choose_cash_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/choose_cash_img"
            android:text="现金"
            android:textColor="@color/text_color_66"
            android:textSize="@dimen/txt_17"/>

        <TextView
            android:id="@+id/layout_cash_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/choose_cash_txt"
            android:text="余额：1200"
            android:textColor="@color/text_color_99"/>
    </RelativeLayout>
</LinearLayout>